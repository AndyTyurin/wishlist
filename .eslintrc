{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "react": true,
    "suite": true,
    "test": true,
    "expect": true
  },
  "settings": {
    "import/core-modules": ["pixi"],
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "plugins": [
    "sort-class-members",
    "prettier",
    "import"
  ],
  "rules": {
    "linebreak-style": 0,
    "no-underscore-dangle": "off",
    "no-shadow": "off",
    "react/sort-comp": "off",
    "import/no-extraneous-dependencies": "off",
    "no-param-reassign": "off",
    "import/no-named-as-default": "off",
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "react/prefer-stateless-function": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "no-mixed-operators": "off",
    "no-confusing-arrow": "off",
    "no-bitwise": "off",
    "function-paren-newline": "off",
    "jsx-a11y/click-events-have-key-events": "off"
  }
}
